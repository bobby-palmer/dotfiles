# Plugins
[[ -r ~/Repos/znap/znap.zsh ]] ||
    git clone --depth 1 -- https://github.com/marlonrichert/zsh-snap.git ~/Repos/znap
source ~/Repos/znap/znap.zsh

zstyle :prompt:pure:path color cyan
znap prompt sindresorhus/pure

znap source zdharma-continuum/fast-syntax-highlighting

# Vars
export EDITOR=nvim
export VISUAL=nvim

# Functions
function push_all() {
  git add -A || return 1
  git commit -m "THIS IS AN AUTO-GENERATED COMMIT BECAUSE I WAS TOO LAZY TO MAKE ONE" || return 1
  git push || return 1
  return 0
}



# BEGIN opam configuration
# This is useful if you're using opam as it adds:
#   - the correct directories to the PATH
#   - auto-completion for the opam binary
# This section can be safely removed at any time if needed.
[[ ! -r '/Users/bobbypalmer/.opam/opam-init/init.zsh' ]] || source '/Users/bobbypalmer/.opam/opam-init/init.zsh' > /dev/null 2> /dev/null
# END opam configuration
