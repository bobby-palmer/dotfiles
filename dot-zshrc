# blank theme to use Starship
ZSH_THEME=""

# Load Zinit 
if [[ ! -f ~/.zinit/bin/zinit.zsh ]]; then
  mkdir -p ~/.zinit
  git clone https://github.com/zdharma-continuum/zinit ~/.zinit/bin
fi
source ~/.zinit/bin/zinit.zsh

# Plugins
eval "$(starship init zsh)"

# Opts
set -o vi

# Commands
function reload() {
  echo "Sourcing zshrc..."
  source ~/.zshrc
}

